<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSimilarMovieOrCast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPoster"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:background="@color/colorSemiBlack"
        android:src="@drawable/ic_loading"
        android:scaleType="centerCrop"
        app:strokeWidth="0dp"
        app:strokeColor="@android:color/transparent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner4Percent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMovieOrCastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvMovieOrCastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        tools:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@id/imgPoster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgPoster"
        app:layout_constraintEnd_toEndOf="@id/imgPoster"/>

</androidx.constraintlayout.widget.ConstraintLayout>